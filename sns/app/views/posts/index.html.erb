<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>本文</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
    <% if post.image? %>
    　<td><%=  image_tag post.image.url%></td>
    <% else %>
    　<td><%= image_tag 'noimage.gif' %></td>
    <% end %>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.body %></td>
        <td><%= post.user.username %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_post_path %>
